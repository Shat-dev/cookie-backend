# Network Configuration
# NOTE: Network name, chain ID, lottery contract address, and cookie contract address 
# are sourced from JSON files, not from environment variables:
# - Network name, chain ID, lottery address: src/constants/LotteryVrfV25Address.json
# - Cookie contract address: src/constants/contract-address.json

# Primary RPC URL for blockchain interactions
RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545

# Optional fallback RPC URLs (for redundancy)
RPC_URL_2=https://data-seed-prebsc-2-s1.binance.org:8545
RPC_URL_3=https://data-seed-prebsc-1-s2.binance.org:8545
RPC_URL_4=https://data-seed-prebsc-2-s2.binance.org:8545

# Wallet Configuration
# Private key for the wallet that will interact with contracts (optional for read-only operations)
PRIVATE_KEY=your_private_key_here

# VRF (Verifiable Random Function) Configuration
# Chainlink VRF Coordinator address for the network
VRF_COORDINATOR=0x2eD832Ba664535e5886b75D64C46EB9a228C2610

# VRF Key Hash (specific to the network and gas lane)
KEY_HASH=0x8596b430971ac45bdf6088665b9ad8e8630c9d5049ab54b14dff711bee7c0e26

# VRF Subscription ID
SUB_ID=81570178286308689144680849056793036439805809571982832711651817887466076177408

# LINK token address for VRF payments (if not using native payments)
LINK_TOKEN=0x84b9B910527Ad5C03A9Ca831909E21e236EA7b06

# Whether to use native token (BNB/ETH) for VRF payments instead of LINK
VRF_NATIVE=true

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# API Keys
ADMIN_API_KEY=your_admin_api_key_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
X_USER_ID=your_x_user_id_here

# CORS Configuration (optional)
FRONTEND_URL=http://localhost:3000
VERCEL_APP_NAME=your_vercel_app_name
CUSTOM_DOMAIN=your_custom_domain.com

# Server Configuration
NODE_ENV=development
PORT=3001

# Cache Configuration
PROJECTION_TTL_MS=60000

# Example RPC configurations for different networks:
# NOTE: To switch networks, update the LotteryVrfV25Address.json file with the appropriate
# network name, chain ID, and lottery contract address for your target network

# BNB Testnet (BSC Testnet)
# RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545

# BNB Mainnet (BSC Mainnet)
# RPC_URL=https://bsc-dataseed1.binance.org

# Base Mainnet
# RPC_URL=https://mainnet.base.org

# Base Sepolia (Testnet)
# RPC_URL=https://sepolia.base.org

# Ethereum Sepolia (Testnet)
# RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
